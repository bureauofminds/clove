<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" buttonMode="true" xmlns:filters="flash.filters.*">
	<mx:VBox width="100%" height="100%" paddingLeft="8" paddingRight="8" verticalAlign="middle">
		
		<mx:Label text="{label}" buttonMode="true" fontWeight="bold">
			<mx:filters>
				<filters:DropShadowFilter angle="90" color="#FFFFFF" distance="1" />
			</mx:filters>
		</mx:Label>
	</mx:VBox>
	
	<mx:Canvas width="100%" height="100%" backgroundAlpha="0" backgroundColor="#FFFFFF" buttonMode="true" />
</mx:Canvas>
