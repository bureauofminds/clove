<?xml version="1.0" encoding="utf-8"?>
<mx:VBox horizontalAlign="center" width="100%" xmlns:mx="http://www.adobe.com/2006/mxml">	
	<mx:Canvas>
		
		<mx:Button styleName="{data.iconStyleName}" buttonMode="true" click="{dispatchEvent(new Event('newIndex',true,true))}"  alpha="{data.enabled ? 1 : .2}"/>
		<mx:Canvas width="100%" height="100%" backgroundAlpha="0" backgroundColor="0" visible="{!data.enabled}" />	
	</mx:Canvas>
	<mx:Label text="{data.label}" color="{data.enabled ? 0x000000 : 0x888888}" />
</mx:VBox>
