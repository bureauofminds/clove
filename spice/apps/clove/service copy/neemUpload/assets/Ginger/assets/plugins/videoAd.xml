<Plugin>   
	
	
	<String instance:id="videoAdScaling" value="stretch" />
	<String instance:id="videoAdMessage" value="Your Video will start in " />
		
		
	<action:script>
		<![CDATA[  
	  
			cueHandlers.videoAd = videoAdCueHandler; 
		
	
		
			function videoAdCueHandler(data:Object)
			{   
				
			    videoPlayer.pause(); 
			    videoPlayer.enableControls = false;     
			    
			    playerControler.visible  = false;
				videoAdCover.visible    = true;
				
				                               
				videoAdvert.load(data["@src"]);
				videoAdvert.play();
				
			}
		]]>
	</action:script> 

	<Canvas instance:id="videoAdCover" style="backgroundColors:#222222; alpha=0.9;" percentWidth="100" percentHeight="100" visible="{false}">
		
			<VideoPlayer instance:id="videoAdvert"  verticalCenter="0" horizontalCenter="0" scaling="{videoAdScaling}">     
				 <observer:listen to="{videoAdvert}" for="playing"> 
					<change:property target="{videoAdTimeLeft}" text="{videoAdMessage}  {videoAdvert.timeLeftString} " />
				 </observer:listen>
				 <observer:listen to="{videoAdvert}" for="end"> 
					<change:property target="{videoAdCover}" visible="{false}" />
					<run script="{playerControler.visible = true;videoPlayer.enableControls = true; videoPlayer.play();}" />
				 </observer:listen>
			</VideoPlayer>
			
			
			<Label instance:id="videoAdTimeLeft" left="10" bottom="10" style="fontColor:#FFFFFF;" text="Loading Advertisement" />

	</Canvas>              
</Plugin>


                                                                                   