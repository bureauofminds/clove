<Plugin>
	<Canvas instance:id="middlePlay" style="backgroundColors:#000000;backgroundAlphas:0.5;topLeftRadius:5;topRightRadius:5;bottomLeftRadius:5;bottomRightRadius:5;width:100;height:50;" verticalCenter="0" horizontalCenter="0" buttonMode="{true}" observer:click="videoPlayer.play()">
		<Image source="{host}/plugins/play.png" verticalCenter="0" horizontalCenter="0"/>
	</Canvas>
	<observer:listen to="{videoPlayer}" for="resume">
		<change:property target="{middlePlay}" visible="{false}" />
		
	</observer:listen>
	
	<observer:listen to="{videoPlayer}" for="pause">
		<change:property target="{middlePlay}" visible="{true}" />
	</observer:listen>
	
</Plugin>