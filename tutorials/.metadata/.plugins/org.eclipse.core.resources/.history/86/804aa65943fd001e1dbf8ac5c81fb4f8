	public class CloveHelloPluginFactory implements IPluginFactory
	{
		
		//--------------------------------------------------------------------------
   	    //
        //  Private Variables
        //
        //--------------------------------------------------------------------------

		private var _settings:TempSettings;
		private var _installer:IServiceInstaller;
		
		//--------------------------------------------------------------------------
		//
		//  Constructor
		//
		//--------------------------------------------------------------------------
        
        /**
		 */
		 
		public function CloveHelloPluginFactory()
		{
			_settings = new TempSettings({name:"Hello Clove",icon:CloveHelloPluginIcon.CLOVE_HELLO_ICON_32});
		}
		
		//--------------------------------------------------------------------------
   	    //
        //  Getters / Setters
        //
        //--------------------------------------------------------------------------

		
		/**
		 */
		
		public function get metadata():INotifiableSettings
		{
			return null;
		}
		
		/**
		 */
		
		public function get installer():IServiceInstaller
		{
			if(!_installer)
			{
//				_installer = new 
			}
			return null;
		}
		
		//--------------------------------------------------------------------------
   	    //
        //  Public Methods
        //
        //--------------------------------------------------------------------------
        
        /**
		 */
		
		public function newPlugin():IClovePlugin
		{
			return new CloveHelloPlugin();
		}

